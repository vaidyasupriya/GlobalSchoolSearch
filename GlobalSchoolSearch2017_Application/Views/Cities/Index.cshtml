@model IEnumerable<GlobalSchoolSearch2017_Application.Models.City>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country.CountryName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CityName }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CityName }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CityName })
                </td>
            </tr>
        }

    </table>
</div>
