<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Global School Search</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Footer.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Global School Search", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Parents", "Parents", "Home")</li>
                    <li>@Html.ActionLink("School Authorities", "SchoolAuthorities", "Home")</li>

                   @if (Request.IsAuthenticated) { 
                    <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                    <li>@Html.ActionLink("Cities", "Index", "Cities")</li>
                    }
                    <li>@Html.ActionLink("Search for school", "SchoolSearch", "SchoolSearch")</li>
                    <li>@Html.ActionLink("Schools", "Index", "Schools")</li>
                    <li>@Html.ActionLink("Reviews", "Index", "Reviews")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    @RenderBody()
    @*<hr />*@
        
</div>
<div class="container">
    <footer  class="blockquote-footer" >
        <p>&copy; @DateTime.Now.Year - Global School Search</p>   <p> *Disclaimer :  Rating displayed is average rating depending on the reviews submitted.  Initially school information is added by our administrators.  If the school information is managed by school itself and is updated within last three months, then rating increases by 1.</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
