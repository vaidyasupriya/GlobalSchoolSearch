@using (Html.BeginForm("Register", "Account", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form"
}))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>@ViewBag.Title.</h2>

            <h3>Create a new account.</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-8">
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            <p style="font-size:smaller; color:blue">For example : info@scholname.xxx </p>
                            <p style="font-size:smaller; color:blue">If your school's official email id is not in the format "info@schoolname.xxx", and you are not able to register, <br />please drop us a mail, we will help you. </p>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                    </div>

                </div>
                <div class="col-md-4">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                    <!-- Advertise26 -->
                    <ins class="adsbygoogle"
                         style="display:block"
                         data-ad-client="ca-pub-2361562748118340"
                         data-ad-slot="4164302146"
                         data-ad-format="auto"></ins>
                    <script>
(adsbygoogle = window.adsbygoogle || []).push({});
                    </script>
                </div>
            </div>
        </div>
    </div>
}

